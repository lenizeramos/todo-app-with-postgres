<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include("head.ejs", { title: "Index", styles:"/css/index.css" }) %>
  </head>
  <body>
    <div class="container py-5">
      <h1 class="text-center mb-4">Todo App</h1>
  
      <form action="/" method="post" class="d-flex mb-4">
        <input
          type="text"
          name="description"
          class="form-control me-2"
          placeholder="Add a new todo"
          required
        />
     
        <button type="submit" class="btn btn-dark">Add Todo</button>
      </form>
  
      <div>
       
          <ul class="list-group">
            <% todos.forEach(todo => { %>
              <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                  <input
                    type="checkbox"
                    class="form-check-input me-2"
                    <% if (todo.completed) { %> checked <% } %>
                  />
                  <span><%= todo.description %></span>
                </div>
                <div>
                  <button
                    class="btn btn-outline-secondary btn-sm me-2"
                  >
                    <i class="bi bi-pencil"></i>
                  </button>
                  <button
                    class="btn btn-outline-danger btn-sm"
                    onclick="location.href='/deleteTodo/<%= todo.id %>'"
                  >
                    <i class="bi bi-trash"></i>
                  </button>
                </div>
              </li>
            <% }) %>
          </ul>
        
      </div>
    </div>
  </body>
</html>
